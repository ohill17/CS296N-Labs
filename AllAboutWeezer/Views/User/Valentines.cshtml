@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Will You Be My Valentine?</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
        }

        .container {
            margin-top: 50px;
        }

        .btn-yes, .btn-no {
            background-color: #ff66b2;
            border-color: #ff66b2;
        }

            .btn-yes:hover, .btn-no:hover {
                background-color: #ff4d94;
                border-color: #ff4d94;
            }
    </style>
</head>
<body>

    <div class="container text-center">
        <h1>Will you be my Valentine?</h1>
        <div id="button-container">
            <button id="yes-btn" class="btn btn-lg btn-yes" onclick="sayYes()">Yes</button>
            <button id="no-btn" class="btn btn-lg btn-no" onclick="sayNo()">No</button>
        </div>
        <div id="output" style="display: none;"></div>
    </div>

    <script>
        function sayYes() {
            document.getElementById("output").innerHTML = "Yay, I love you Savannah!";
            document.getElementById("output").style.display = "block";
            document.getElementById("yes-btn").style.display = "none";
            document.getElementById("no-btn").style.display = "none";
        }

        function sayNo() {
            document.getElementById("button-container").innerHTML = `
                    <button class="btn btn-lg btn-yes" onclick="sayYes()">Yes</button>
                    <button class="btn btn-lg btn-yes" onclick="sayYes()">Yes</button>
                `;
        }
    </script>

</body>
</html>