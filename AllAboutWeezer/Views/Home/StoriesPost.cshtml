@if (Model != null)
{
    <h1>Stories about Rivers Cuomo and his band Weezer.</h1>

    @foreach (var message in Model)
    {
        <div class="card mt-3">
            <div class="card-body">
                <h2 class="card-title">Title: @message.Title</h2>
                <p class="card-text">From: @(message.From != null ? message.From.Name : "Unknown")</p>
                <p class="card-text">Topic: @message.Topic</p>
                <p class="card-text">Year the Story Takes Place: @message.YearDate</p>
                <p class="card-text">Story: @message.StoryBody</p>
                <p class="card-text">Date: @message.Date</p>
                <a href="/Home/Reply?OriginalMessageId=@message.MessageId" class="btn btn-primary">Reply</a>
            </div>
        </div>

        @if (message.Replies != null && message.Replies.Count > 0)
        {
            <div class="ml-3 mt-3">
                <h4>Replies</h4>
                @foreach (Message reply in message.Replies)
                {
                    <div class="card mt-3">
                        <div class="card-body">
                            <p class="card-text">Message: @reply.StoryBody</p>
                            <p class="card-text">Date: @reply.Date</p>
                        </div>
                    </div>
                }
            </div>
        }
    }
}