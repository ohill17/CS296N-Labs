<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - All About Weezer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AllAboutWeezer.styles.css" asp-append-version="true" />
    <style>
        /* Add your custom styles here */
        /* Header styles */
        header {

            text-align: center;
        }

        /* Footer styles */
        footer {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        /* Navbar styles */
        .navbar {
            background-color: #333 !important;
        }

        .navbar-nav .nav-link {
            color: #fff !important;
        }

            .navbar-nav .nav-link:hover {
                opacity: 0.7;
            }

        .navbar-nav .btn {
            background-color: #ff6b6b;
            border-color: #ff6b6b;
            color: #fff;
        }

            .navbar-nav .btn:hover {
                background-color: #e74c3c;
                border-color: #e74c3c;
            }
    </style>
</head>

<body>
    @using Microsoft.AspNetCore.Identity

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">All About Weezer</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Sources" asp-action="Index">Sources</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="WeezerHits" asp-action="Index">Top Weezer Songs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Quiz" asp-action="Index">Weezer Quiz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Stories">Story Post</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="StoriesPost">View Stories</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Index"><span class="fas fa-cog"></span>&nbsp;Admin</a>
                            </li>
                        }
                        @if (User.IsInRole("GF"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Valentines">
                                    <span class="fas fa-heart"></span>&nbsp;Valentines
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Signed-in user - show Log Out button and username -->
                            <li class="nav-item">
                                <form method="post" asp-action="Logout" asp-controller="Registration">
                                    <input type="submit" value="Log Out" class="btn btn-outline-dark" />
                                    <span>@User.Identity.Name</span>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- Anonymous user - show Sign Up link and Log In button -->
                            <li class="nav-item">
                                <a class="btn btn-primary mr-3" asp-action="Index" asp-controller="Registration">
                                    Sign Up!
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Login" asp-controller="Registration" class="btn btn-primary ml-auto">
                                    Log In
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - AllAboutWeezer - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>